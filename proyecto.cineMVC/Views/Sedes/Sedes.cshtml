@model IEnumerable<proyecto.Cine.Logica.Modelo.Sede>
@{
    ViewBag.Title = "Sedes";
    Layout = "~/Views/Shared/_LayoutAdministrar.cshtml";
}

<h2>Sedes</h2>
<span>
    @if (TempData["Mjs"] != "")
    {
        @TempData["Mjs"];
    }
    <br />
</span>
<a href="/Sedes/nuevaSede" class ="waves-effect waves-light btn"><i class="material-icons right">add</i>Nueva Sede</a>
<table class="highlight">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioGeneral)</th>
        </tr>
@foreach (var s in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelS => s.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelS => s.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelS => s.PrecioGeneral)
        </td>
        <td>
            @Html.DisplayFor(modelS => s.IdSede)
        </td>
        <td>
            @Html.ActionLink("Editar","editar", new {id = s.IdSede})
        </td>
    </tr>
}

</table>

